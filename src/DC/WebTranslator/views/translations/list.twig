{% extends "@webtranslator/shell.twig" %}

{% set active_page = "webtranslator.translations.list" %}

{% block content %}

    <h1 class="page-header">
        Viewing translations for <em>{{ locale }}</em>
    </h1>

    <div class="row">
        <div class="col-md-10">
            <ul class="breadcrumb">
                <li><i class="fa fa-dashboard"></i> <a href="{{ path('webtranslator.index') }}">Dashboard</a></li>
                <li class="active">
                    <i class="fa fa-language"></i> Translations for <em>{{ locale }}</em>
                    ({% if app.locale != locale %}{{ missingCount }} missing{% else %}Primary language{% endif %})
                </li>
            </ul>
        </div>
        <div class="col-md-2">
            <!-- Single button -->
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Change language <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    {% for l in locales %}
                        <li><a href="{{ path('webtranslator.translations.list', {targetLocale: l}) }}">{{ l }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>


    <form method="post" action="{{ path('webtranslator.translations.list') }}">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th width="20%">Key</th>
                    <th>Translation</th>
                    <th width="1%"></th>
                </tr>
            </thead>
            <tbody>
                {% for messageKey, message in messages %}
                    <tr class="{% if translations[messageKey] is not defined %}danger{% endif %}">
                        <td><u><strong>{{ messageKey }}</strong></u></td>
                        <td>
                            {% if app.locale != locale %}
                            <textarea class="translationInput" disabled="disabled">{{ message }}</textarea>
                            {% endif %}
                            <textarea name="translations[{{ locale }}][{{ messageKey }}]" class="translationInput">{% if translations[messageKey] is defined %}{{ translations[messageKey] }}{% endif %}</textarea>
                        </td>
                        <td><button class="btn btn-default btn-sm" type="submit">Save translations</button></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </form>


{% endblock %}

{% block extracss %}
<style type="text/css">
    .translationInput {
        width: 100%;
        min-height: 100px;
        border: 1px solid #ddd;
    }
    .translationInput:disabled {
        background-color: #EEE;
        color: #9E9999;
    }
</style>
{% endblock %}